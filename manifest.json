{
  "manifest_version": 3,
  "version": "1.0",
  "name": "leetcode-local-setup",
  "description": "get a local file to solve a leetcode problem in your favorite text editor",
  "host_permissions": ["https://leetcode.com/problems/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "leetcode.png"
  },
  "permissions": ["activeTab", "scripting", "downloads", "storage"]
}
